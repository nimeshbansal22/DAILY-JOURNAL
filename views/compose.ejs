<%- include('partials/header'); -%>

<h1>Compose</h1>
<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="inputtitle">Title</label>
    <input type="text" class="form-control" id="inputtitle"  placeholder="Enter Title" name="posttitle">
  </div>
  <div class="form-group">
    <label for="inputpost">Post</label>
    <textarea class="form-control" id="inputpost" placeholder="Write Your Blog" name="postbody" rows="5" cols="30"></textarea>
  </div>
  <button type="submit" name="button" class="btn btn-primary">Publish</button>
  <a class="btn btn-danger" href="/logout" role="button">Log Out</a>
  <div>
    <p>Once publish Blog can't be Remove</p>
  </div>

</form>
<%- include('partials/footer'); -%>
